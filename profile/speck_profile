#!/usr/bin/ipython
import os, string
dn = os.getenv("SPECK")
startup = os.path.join("profile","profile_speck","startup")
print startup
ll = os.listdir(dn + os.sep + startup)
ddn = dn + os.sep + startup
ll.sort()
print "Starting up environment: (this an old ipython version, please upgrade)."
import sys
#sys.path.append(ddn)
for i in ll:
	if i.rfind(".py") == len(i) -3: 
		print "#################################"
		print "Loading --> %s"%i
		execfile(ddn+os.sep+i)
		#exec("from %s import *" % (i[:-3]))
		print "#################################"
print "Environment startup completed"
