#!/bin/bash
if 
    test -z `screen -ls|grep speckle|cut -f 2|cut -d $'\n' -f 2`
then
    if
        (screen -ls |grep speckle); 
    then 
        echo speckle session already exists: connecting to...
        SCRS=`screen -ls|grep speckle|cut -f 2`
        gnome-terminal --hide-menubar --title=SPECKLE -e "screen -xr `echo $SCRS|cut -f 1 -d " "`"
    else 
        echo speckle session not found: creating speckle session.
        gnome-terminal --hide-menubar --title=SPECKLE --geometry 140x50+10+20 -e "screen -S speckle -A speck"
    fi    
else
    echo Multiple speckle sessions exist please connect manually.
    echo list follows:
    screen -ls|grep speckle
    echo use "screen -x sessionname" to connect
fi






