print("SPECK says: 'dans le cochon tout est bon'",)
print('\x1b[0m')
print("+++++++++++++++++++++++++++++++++++++++++")
print("This speck folder is : %s"%dn)

#print(">Setting TANGO environment variables")
os.system("%s/bin/tango_config"%(dn))

